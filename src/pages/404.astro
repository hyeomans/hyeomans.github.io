---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Page not found';
const description = 'The page you were looking for doesnâ€™t exist.';
const languageLinks = [
	{ lang: 'en', href: '/', label: 'EN', available: true, isTranslation: true },
	{ lang: 'es', href: '/es/posts/', label: 'ES', available: false },
];
---

<BaseLayout title={title} description={description} lang="en" languageLinks={languageLinks} canonicalUrl="/404/">
	<section class="bg-white py-24 dark:bg-gray-900 sm:py-32">
		<div class="mx-auto flex max-w-3xl flex-col items-center px-6 text-center">
			<p class="text-sm font-semibold uppercase tracking-[0.4em] text-gamboge-600 dark:text-gamboge-400">
				404
			</p>
			<h1 class="mt-6 text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl">
				{title}
			</h1>
			<p class="mt-6 text-base leading-7 text-gray-600 dark:text-gray-300">
				{description} Try heading back home or exploring the latest writing.
			</p>
			<div class="mt-10 flex flex-wrap items-center justify-center gap-4">
				<a
					href="/"
					class="rounded-full bg-gamboge-600 px-5 py-2.5 text-sm font-semibold text-white shadow-lg shadow-gamboge-600/30 transition hover:-translate-y-0.5 hover:bg-gamboge-500"
				>
					Go home
				</a>
				<a
					href="/posts/"
					class="rounded-full border border-gray-200 px-5 py-2.5 text-sm font-semibold text-gray-900 hover:border-gamboge-500 hover:text-gamboge-600 dark:border-gray-700 dark:text-gray-100 dark:hover:border-gamboge-400 dark:hover:text-gamboge-400"
				>
					See posts
				</a>
			</div>
		</div>
	</section>
</BaseLayout>
