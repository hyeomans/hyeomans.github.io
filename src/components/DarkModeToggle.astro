---
// Dark mode toggle button component
---

<button
	id="dark-mode-toggle"
	type="button"
	class="p-2 rounded-md text-gray-700 dark:text-gray-300 hover:text-gamboge-600 dark:hover:text-gamboge-400 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gamboge-500"
	aria-label="Toggle dark mode"
	aria-pressed="false"
>
	<span class="sr-only">Toggle dark mode</span>
	<!-- Sun icon (visible in dark mode) -->
	<svg
		id="sun-icon"
		class="hidden dark:block w-5 h-5"
		fill="none"
		viewBox="0 0 24 24"
		stroke-width="1.5"
		stroke="currentColor"
		aria-hidden="true"
	>
		<path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" />
	</svg>

	<!-- Moon icon (visible in light mode) -->
	<svg
		id="moon-icon"
		class="block dark:hidden w-5 h-5"
		fill="none"
		viewBox="0 0 24 24"
		stroke-width="1.5"
		stroke="currentColor"
		aria-hidden="true"
	>
		<path stroke-linecap="round" stroke-linejoin="round" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
	</svg>
</button>

<script is:inline>
	if (typeof window !== 'undefined') {
		const toggle = document.getElementById('dark-mode-toggle');

		if (toggle) {
			const updateAria = () => {
				const isDark = document.documentElement.classList.contains('dark');
				toggle.setAttribute('aria-pressed', isDark ? 'true' : 'false');
			};

			updateAria();

			toggle.addEventListener('click', () => {
				const isDark = document.documentElement.classList.contains('dark');

				if (isDark) {
					document.documentElement.classList.remove('dark');
					localStorage.setItem('theme', 'light');
				} else {
					document.documentElement.classList.add('dark');
					localStorage.setItem('theme', 'dark');
				}

				updateAria();
			});
		}
	}
</script>
