---
import { SITE_TITLE, NAV_ITEMS_EN, NAV_ITEMS_ES, SOCIAL_LINKS } from '../consts';
import DarkModeToggle from './DarkModeToggle.astro';
import LanguageSwitcher from './LanguageSwitcher.astro';
import type { LanguageLink } from '../types/site';

interface Props {
	currentPath?: string;
	lang?: 'en' | 'es';
	languageLinks?: LanguageLink[];
}

const { currentPath = '/', lang = 'en', languageLinks } = Astro.props;
const navItems = lang === 'en' ? NAV_ITEMS_EN : NAV_ITEMS_ES;

const isActivePath = (href: string) => {
	if (href === '/') {
		return currentPath === '/';
	}
	return currentPath === href || currentPath.startsWith(href);
};
---

<header class="sticky top-0 z-50 bg-white/90 backdrop-blur-sm dark:bg-gray-900/90 border-b border-gray-200 dark:border-gray-800 transition-colors">
	<nav class="mx-auto max-w-7xl px-6 lg:px-8 py-4">
		<div class="flex items-center justify-between">
			<!-- Logo / Site Title -->
			<div class="flex-shrink-0">
				<a href="/" class="text-xl font-bold text-gray-900 dark:text-white hover:text-gamboge-600 dark:hover:text-gamboge-400 transition-colors">
					{SITE_TITLE}
				</a>
			</div>

			<!-- Desktop Navigation -->
			<div class="hidden md:flex md:items-center md:gap-8" role="navigation" aria-label="Primary">
				{navItems.map((item) => (
					<a
						href={item.href}
						class={`text-sm font-medium transition-colors ${
							isActivePath(item.href)
								? 'text-gamboge-600 dark:text-gamboge-400 border-b-2 border-gamboge-600 dark:border-gamboge-400'
								: 'text-gray-700 dark:text-gray-300 hover:text-gamboge-600 dark:hover:text-gamboge-400'
						}`}
					>
						{item.label}
					</a>
				))}
			</div>

			<!-- Social Links + Dark Mode Toggle -->
			<div class="flex items-center gap-4">
				<div class="hidden lg:block">
					<LanguageSwitcher currentLang={lang} links={languageLinks} />
				</div>

				<!-- Social Icons (hidden on mobile) -->
				<div class="hidden md:flex items-center gap-3">
					<a
						href={SOCIAL_LINKS.github}
						target="_blank"
						rel="noopener noreferrer"
						class="text-gray-600 hover:text-gamboge-600 dark:text-gray-400 dark:hover:text-gamboge-400 transition-colors"
						aria-label="GitHub"
					>
						<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
